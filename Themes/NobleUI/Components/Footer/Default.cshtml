@using Smp.NobleUI.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Ui.Branding
@inject IBrandingProvider BrandingProvider
@inject IHtmlLocalizer<NobleUIResource> TL

@{
    string copyrightAuthor = (string) ViewData["CopyrightAuthor"] ?? BrandingProvider.AppName;
    string copyrightUrl = (string) ViewData["CopyrightUrl"];
    string version = (string) ViewData["Version"] ?? "1.0";
}

<footer class="footer d-flex flex-column flex-md-row align-items-center justify-content-between">
    <strong>Copyright &copy; 2014-@DateTime.Now.Year <a href="@copyrightUrl">@copyrightAuthor</a>.</strong>
    @TL["AllRightsReserved"]
    <div class="float-right d-none d-sm-inline-block">
        <b>@TL["Version"]</b> @version
    </div>
</footer>

